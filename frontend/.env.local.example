# Omni Insta Frontend - Local Development Environment
# Copy this file to .env.local and configure your values

# Firebase Configuration (Development)
VITE_FIREBASE_API_KEY=your-development-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Emulator Configuration (Recommended for local development)
VITE_USE_FIREBASE_EMULATOR=true
VITE_FIREBASE_EMULATOR_HOST=localhost
VITE_FIREBASE_AUTH_EMULATOR_PORT=9099
VITE_FIREBASE_FIRESTORE_EMULATOR_PORT=8080
VITE_FIREBASE_FUNCTIONS_EMULATOR_PORT=5001

# API Configuration
VITE_API_BASE_URL=http://localhost:5001/your-project-id/us-central1
VITE_FUNCTIONS_BASE_URL=http://localhost:5001

# Development Configuration
VITE_NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_ENABLE_CONSOLE_LOGS=true

# Feature Flags (Development)
VITE_FEATURE_PROXY_MANAGEMENT=true
VITE_FEATURE_ACTIVITY_LOGS=true
VITE_FEATURE_PERFORMANCE_MONITORING=true
VITE_FEATURE_DEBUG_PANEL=true

# Instagram API Configuration (Development)
VITE_INSTAGRAM_CLIENT_ID=your-instagram-client-id
VITE_INSTAGRAM_REDIRECT_URI=http://localhost:5173/auth/instagram/callback

# Stripe Configuration (Test Mode)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-test-key

# Development Server Configuration
VITE_DEV_SERVER_PORT=5173
VITE_DEV_SERVER_HOST=localhost
VITE_DEV_SERVER_OPEN=true

# Hot Module Replacement
VITE_HMR_ENABLED=true
VITE_HMR_PORT=24678

# Build Configuration
VITE_BUILD_SOURCEMAP=true
VITE_BUILD_TARGET=esnext

# Logging Configuration
VITE_LOG_LEVEL=debug
VITE_ENABLE_NETWORK_LOGS=true
VITE_ENABLE_PERFORMANCE_LOGS=true

# Security Configuration (Development)
VITE_ENABLE_STRICT_MODE=false
VITE_BYPASS_RATE_LIMITS=true