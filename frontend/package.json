{
  "name": "omniy-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Omniy Instagram予約投稿アプリ - フロントエンド",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-check": "vue-tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "type-check": "vue-tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "lighthouse": "lhci autorun",
    "lighthouse:ci": "lhci autorun --config=lighthouserc.js",
    "analyze:bundle": "vite build --mode analyze",
    "performance:audit": "npm run build && npm run lighthouse",
    "build:staging": "vite build --mode staging",
    "build:production": "vite build --mode production",
    "deploy:staging": "../scripts/deploy-staging.sh",
    "deploy:production": "../scripts/deploy-production.sh"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/list": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@fullcalendar/vue3": "^6.1.17",
    "@mdi/font": "^7.3.67",
    "@vueuse/core": "^10.5.0",
    "axios": "^1.6.0",
    "chart.js": "^4.4.9",
    "date-fns": "^2.30.0",
    "firebase": "^10.14.1",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-i18n": "^9.14.4",
    "vue-router": "^4.2.5",
    "vuetify": "^3.4.0"
  },
  "devDependencies": {
    "@cypress/vue": "^6.0.0",
    "@rushstack/eslint-patch": "^1.11.0",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-vue": "^4.5.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vue/tsconfig": "^0.4.0",
    "cypress": "^13.0.0",
    "eslint": "^8.54.0",
    "eslint-plugin-vue": "^9.18.1",
    "jsdom": "^23.0.0",
    "lighthouse-ci": "^1.13.1",
    "prettier": "^3.1.0",
    "typescript": "~5.2.0",
    "vite": "^5.0.0",
    "vite-plugin-pwa": "^1.0.0",
    "vite-plugin-vuetify": "^2.0.0",
    "vitest": "^1.0.0",
    "vue-tsc": "^1.8.22",
    "web-vitals": "^5.0.1",
    "workbox-window": "^7.3.0"
  },
  "keywords": [
    "vue",
    "typescript",
    "instagram",
    "scheduling",
    "firebase"
  ],
  "author": "Omniy Team",
  "license": "MIT"
}
