# Omni Insta Functions - Local Development Environment
# Copy this file to .env.local and configure your values

# Firebase Configuration (Development)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Firebase Admin SDK (Development)
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json
FIREBASE_DATABASE_URL=https://your-project-default-rtdb.firebaseio.com

# Firebase Emulator Configuration
USE_FIREBASE_EMULATOR=true
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080
FIREBASE_STORAGE_EMULATOR_HOST=localhost:9199

# Instagram Graph API Configuration (Development)
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret
INSTAGRAM_REDIRECT_URI=http://localhost:5173/auth/instagram/callback
INSTAGRAM_API_VERSION=v18.0
INSTAGRAM_BASE_URL=https://graph.facebook.com

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your-stripe-test-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_PRICE_ID_BASIC=price_test_basic_plan
STRIPE_PRICE_ID_PRO=price_test_pro_plan
STRIPE_PRICE_ID_BUSINESS=price_test_business_plan

# Development Configuration
NODE_ENV=development
DEBUG_MODE=true
ENABLE_CONSOLE_LOGS=true
LOG_LEVEL=debug

# API Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:5000,http://localhost:4000
API_RATE_LIMIT_ENABLED=false
API_TIMEOUT=30000

# Security Configuration (Development)
JWT_SECRET=your-development-jwt-secret-key
ENCRYPTION_KEY=your-32-character-encryption-key
ENABLE_REQUEST_VALIDATION=true
BYPASS_AUTH_FOR_TESTING=false

# External Services Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Proxy Configuration (Optional)
PROXY_ENABLED=false
PROXY_ROTATION_ENABLED=false
PROXY_VALIDATION_ENABLED=false

# Notification Configuration (Development)
EMAIL_SERVICE_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true
SENTRY_DSN=your-sentry-dsn

# Cache Configuration
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Background Job Configuration
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL_MINUTES=1
MAX_CONCURRENT_EXECUTIONS=10
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Testing Configuration
ENABLE_TEST_MODE=true
MOCK_INSTAGRAM_API=false
SKIP_PLAN_LIMITS=false
TEST_USER_ID=test-user-123

# Database Configuration
MAX_POOL_SIZE=10
CONNECTION_TIMEOUT=10000
IDLE_TIMEOUT=30000

# File Storage Configuration
STORAGE_BUCKET=your-project.appspot.com
TEMP_UPLOAD_PATH=/tmp/uploads
MAX_FILE_SIZE_MB=10

# Feature Flags (Development)
FEATURE_PROXY_MANAGEMENT=true
FEATURE_ACTIVITY_LOGS=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ADVANCED_SCHEDULING=true