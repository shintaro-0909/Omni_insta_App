{
  "name": "omniy-functions",
  "version": "1.0.0",
  "description": "Omniy Instagram予約投稿アプリ - Cloud Functions",
  "main": "lib/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "tsc",
    "build:clean": "rm -rf lib && npm run build",
    "build:watch": "tsc --watch",
    "build:production": "tsc --project tsconfig.production.json",
    "serve": "npm run build && firebase emulators:start --only functions",
    "serve:all": "npm run build && firebase emulators:start",
    "serve:debug": "npm run build && firebase emulators:start --only functions --inspect-functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase deploy --only functions --project staging",
    "deploy:production": "firebase deploy --only functions --project production",
    "logs": "firebase functions:log",
    "logs:tail": "firebase functions:log --follow",
    "logs:error": "firebase functions:log --severity error",
    "lint": "eslint --ext .js,.ts .",
    "lint:check": "eslint --ext .js,.ts . --no-fix",
    "lint:fix": "eslint --ext .js,.ts . --fix",
    "format": "prettier --write 'src/**/*.{ts,js}'",
    "format:check": "prettier --check 'src/**/*.{ts,js}'",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "jest --runInBand --no-coverage",
    "test:coverage": "jest --coverage",
    "test:coverage:open": "npm run test:coverage && open coverage/lcov-report/index.html",
    "test:rules": "firebase emulators:exec --only firestore 'npm run test:firestore-rules'",
    "test:firestore-rules": "jest --testMatch='**/*.rules.test.js'",
    "test:integration": "firebase emulators:exec 'jest --testMatch=**/*.integration.test.js'",
    "test:e2e": "firebase emulators:exec 'jest --testMatch=**/*.e2e.test.js'",
    "test:all": "npm run lint:check && npm run type-check && npm run test && npm run test:rules",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "analyze:deps": "npx depcheck",
    "analyze:bundle": "npx webpack-bundle-analyzer lib/",
    "clean": "rm -rf lib node_modules/.cache",
    "clean:all": "rm -rf lib node_modules package-lock.json && npm install",
    "dev:setup": "../tools/scripts/dev-setup.sh",
    "dev:start": "../tools/scripts/dev-start.sh --no-frontend",
    "dev:test": "../tools/scripts/dev-test.sh --backend-only",
    "postinstall": "echo 'Backend dependencies installed successfully'",
    "pretest": "npm run build",
    "predeploy": "npm run test:all",
    "health-check": "npm run lint:check && npm run type-check && npm run test",
    "db:backup": "firebase firestore:delete --all-collections --yes && gsutil cp gs://your-backup-bucket/latest.json . && firebase firestore:import latest.json",
    "db:seed": "node scripts/seed-database.js",
    "emulator:data:export": "firebase emulators:export ./firebase-data",
    "emulator:data:import": "firebase emulators:start --import=./firebase-data"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.12",
    "axios": "^1.9.0",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "firebase-admin": "^11.11.0",
    "firebase-functions": "^4.5.0",
    "nodemailer": "^6.9.0",
    "socks-proxy-agent": "^8.0.5",
    "stripe": "^14.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.0",
    "firebase-functions-test": "^3.1.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.2.0"
  },
  "keywords": [
    "firebase",
    "functions",
    "instagram",
    "scheduling",
    "typescript"
  ],
  "author": "Omniy Team",
  "license": "MIT",
  "private": true
}
